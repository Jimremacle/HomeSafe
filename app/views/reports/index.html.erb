<div class="banner"></div>

<div class="" id="full">
  <div class="row">

    <div
      id="mapContainer"
      style="width: 75%;
      height: calc(100vh - 64px);"
      data-markers="<%= @markers.to_json %>"
      data-geo-marker="<%= @geolocation_marker %>"
      data-coordinates-start="<%= @coordinates_start %>"
      data-coordinates-end="<%= @coordinates_end %>"
      data-here-app-id="<%= ENV['here_app_id'] %>"
      data-here-app-code="<%= ENV['here_app_code'] %>"
      class="col-12 col-lg-8"
    ></div>
    <div class="col-12 col-lg-4">

      <div class="address-report">
        <div>

        <%= form_tag reports_path, method: :get do %>
          <%= text_field_tag :query_start,
          params[:query_start],
          class: "form-control",
          placeholder: "Somewhere in Brussels"
          %>
          <%= text_field_tag :query_end,
          params[:query_end],
          class: "form-control",
          placeholder: "Somewhere else in Brussels"
          %>
          <%= submit_tag "Go!" %>
        <% end %>

        <div class="btn btn-primary" id="safest_button">Fafest</div>
        <div class="btn btn-success" id="fastest_button">Safest</div>
        </div>
      </div>
      <div id="instructionsContainer">

      </div>
      <div>
        <br>
        <br>
        <div class="d-flex justify-content-around">

          <div>
            <%= link_to "Distress Message", emergency_contacts_path, method: :post, class:"btn btn-danger"  %>
          </div>



          <%# link_to new_report_path do %>
          <!-- <div class="btn btn-danger text-right">Report</div> -->
          <%# end %>

          <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
            Report
          </button>

          <!-- Modal -->
          <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <%= simple_form_for Report.new do |f| %>


                  <%= f.input :address, placeholder: @address %>
                  <%# raise %>

                  <%= f.input :report_type, collection: Report::INCIDENTS %>

                  <%= f.input :description %>

                  <%# f.input :occurence_timedate %>

                  <%= f.input :occurence_timedate, as: :string, label: "Dates", placeholder: "From", wrapper_html: { class: "inline_field_wrapper" } %>


                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <%= f.button :submit %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>





        </div>
      </div>
    </div>
  </div>
</div>


