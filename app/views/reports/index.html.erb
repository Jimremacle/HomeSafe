<div class="">
  <div class="d-flex">

    <div
      id="mapContainer"
      style="width: 75%;
      height: calc(100vh - 64px);"
      data-markers="<%= @markers.to_json %>"
      data-geo-marker="<%= @geolocation_marker %>"
      data-here-app-id="<%= ENV['here_app_id'] %>"
      data-here-app-code="<%= ENV['here_app_code'] %>"
    ></div>
    <div>

      <div class="address-report">
        <div>

          <form accept-charset="UTF-8" action="#" method="get">
            <input name="utf8" type="hidden" value="&#x2713;" />
            <div>
              <label for="q">Start:</label>
              <input id="q" name="q" type="text" placeholder="Enter your position" />
            </div>
            <div>
              <label for="e">End:</label>
              <input id="e" name="e" type="text" placeholder="Enter your destination" />
            </div>
            <input name="commit" type="submit" value="Go" />
          </form>

        </div>
        <%= link_to new_report_path do %>
        <div class="btn btn-primary text-right">Report</div>
        <% end %>
      </div>
    </div>
  </div>
</div>


