<div class="container">
  <h1>Welcome</h1>

  <% @reports.each do |report| %>
    <ul>
      <li> <%= report.report_type %> : <%= report.description %> </li>
    </ul>
  <% end %>
</div>

<div>

  <%= form_tag reports_path, method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Brussels"
    %>
    <%= submit_tag "Geolocate!" %>
  <% end %>

  <p><%= @latitude %></p>
  <p><%= @longitude %></p>




</div>

