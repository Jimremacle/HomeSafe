<div class="">
  <div class="d-flex">
    <div
      id="mapContainer"
      style="width: 75%;
      height: calc(100vh - 64px);"
      data-markers="<%= @markers.to_json %>"
      data-here-app-id="<%= ENV['here_app_id'] %>"
      data-here-app-code="<%= ENV['here_app_code'] %>"
    ></div>
    <div>
      <div>
        <% @reports.each do |report| %>
           <ul>
             <li> <%= report.report_type %> : <%= report.description %> </li>
               <strong>Address: </strong> <%= report.address %>
           </ul>
         <% end %>
      </div>
      <div>

        <form accept-charset="UTF-8" action="/search" method="get">
          <input name="utf8" type="hidden" value="&#x2713;" />
          <label for="q">Start:</label>
          <input id="q" name="q" type="text" />
          <label for="e">End:</label>
          <input id="e" name="e" type="text" />
          <input name="commit" type="submit" value="Search" />
        </form>

      </div>
    </div>
  </div>
</div>
